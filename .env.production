APP_NAME="Hotel Management System"
APP_ENV=production
APP_KEY=base64:YOUR_PRODUCTION_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-domain.com

LOG_CHANNEL=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database
DB_CONNECTION=mysql
DB_HOST=your-db-host.rds.amazonaws.com
DB_PORT=3306
DB_DATABASE=hms_prod
DB_USERNAME=prod_user
DB_PASSWORD=your_secure_password

# Cache
CACHE_DRIVER=redis
CACHE_STORE=redis

# Queue
QUEUE_CONNECTION=redis

# Session
SESSION_DRIVER=database

# Mail (Production)
MAIL_MAILER=mailgun
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=your-mailgun-username
MAIL_PASSWORD=your-mailgun-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@hotel.com"
MAIL_FROM_NAME="Hotel Management System"

# MAILGUN
MAILGUN_DOMAIN=mg.hotel.com
MAILGUN_SECRET=your-mailgun-secret

# Redis (Production)
REDIS_HOST=your-redis-host.cache.amazonaws.com
REDIS_PASSWORD=your_secure_redis_password
REDIS_PORT=6379

# AWS
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-bucket-name

# Stripe
STRIPE_PUBLIC_KEY=pk_live_your_key_here
STRIPE_SECRET_KEY=sk_live_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Twilio
TWILIO_SID=your_sid
TWILIO_TOKEN=your_token
TWILIO_FROM=your_number

# Security
SANCTUM_STATEFUL_DOMAINS=api.hotel.com,www.hotel.com
SESSION_DOMAIN=.hotel.com

# Rate Limiting
RATE_LIMIT=60
